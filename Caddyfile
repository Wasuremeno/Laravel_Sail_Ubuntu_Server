http://localhost:80 {
    # Для статических файлов - отдаем напрямую
    @static {
        file
        path *.css *.js *.png *.jpg *.jpeg *.gif *.ico *.svg *.woff *.woff2 *.ttf *.eot
    }
    handle @static {
        root * /var/www/html/public
        file_server
    }
    
    # Все остальные запросы - проксируем к Laravel
    reverse_proxy laravel.test:80
}